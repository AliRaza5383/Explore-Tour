extend base.pug

block style
  link(rel="stylesheet" href="/static/style.css")
  link(rel="stylesheet" href="/static/style2.css")
  link(rel="stylesheet" href="/static/style3.css")

block scripts
  script(src='/static/index.js')

block content
  .container
    h1 Register for a Tour

    .register-form
      form(action="/submit-registration" method="POST" id="registrationForm")
        .form-group
          label(for="name") Full Name
          input#name(type="text" name="name" placeholder="Enter your full name" required)
        .form-group
          label(for="email") Email Address
          input#email(type="email" name="email" placeholder="Enter your email" required)
        .form-group
          label(for="phone") Phone Number
          input#phone(type="tel" name="phone" placeholder="Enter your phone number" required)
        .form-group
          label(for="tour") Select Tour
          select#tour(name="tour" required)
            option(value="") -- Select Tour --
            option(value="tour1") Tour 1 - City Tour
            option(value="tour2") Tour 2 - Mountain Adventure
            option(value="tour3") Tour 3 - Beach Retreat
        .form-group
          label(for="date") Available Dates
          select#date(name="date" required disabled)
            option(value="") -- Select a Tour First --
        .form-group
          button(type="submit") Register Now
    .confirmation-message#confirmationMessage(style="display:none;")
      p Thank you for registering! We will get back to you soon.
    form#registrationForm(action="/submit-registration", method="POST")
  // Tour Selection
  .form-group
    label(for="tour") Select Your Tour
    select#tour(name="tour" required)
      option(value="") -- Select a Tour --
      option(value="tour1") Tour 1
      option(value="tour2") Tour 2
      option(value="tour3") Tour 3

  // Date Selection
  .form-group
    label(for="date") Select Date
    select#date(name="date" required disabled)
      option(value="") -- Select a Tour First --

  // Package Selection
  .form-group
    label(for="package") Select Package
    select#package(name="package" required)
      option(value="basic") Basic Package
      option(value="premium") Premium Package
      option(value="luxury") Luxury Package

  // Payment Method Selection
  .form-group
    label(for="payment") Payment Method
    select#payment(name="payment" required)
      option(value="credit-card") Credit Card
      option(value="paypal") PayPal
      option(value="bank-transfer") Bank Transfer

  // Referral Source
  .form-group
    label(for="referral") How did you hear about us?
    select#referral(name="referral")
      option(value="") -- Select an option --
      option(value="social-media") Social Media
      option(value="word-of-mouth") Word of Mouth
      option(value="search-engine") Search Engine
      option(value="other") Other

  // Emergency Contact Information
  .form-group
    label(for="emergency-contact") Emergency Contact Name
    input#emergency-contact(type="text" name="emergency-contact" placeholder="Emergency Contact Name")

  .form-group
    label(for="emergency-phone") Emergency Contact Phone
    input#emergency-phone(type="tel" name="emergency-phone" placeholder="Emergency Contact Phone Number")

  // Additional Information
  .form-group
    label(for="additional-info") Additional Information
    textarea#additional-info(name="additional-info" rows="4" placeholder="Any additional information or special requests?")

  // Privacy Policy Agreement
  .form-group
    input#privacy-policy(type="checkbox" name="privacy-policy" required)
    label(for="privacy-policy") I agree to the Privacy Policy and Terms of Use

  // Submit Button
  .form-group
    button(type="submit") Register Now

  // Confirmation Message (Hidden initially)
  .confirmation-message#confirmationMessage(style="display:none;")
    p Thank you for registering! We will get back to you soon.

