extend base.pug

block scripts
  script(src='/static/index.js')

block content
  .container
    h1 Contact Us

    // Contact Form
    .contact-form
      form(action="/submit-contact" method="POST")
        .form-group
          label(for="name") Full Name
          input#name(type="text" name="name" placeholder="Enter your full name" required)
        .form-group
          label(for="email") Email Address
          input#email(type="email" name="email" placeholder="Enter your email" required)
        .form-group
          label(for="message") Message
          textarea#message(name="message" placeholder="Enter your message" required)
        .form-group
          button(type="submit") Send Message

    // Contact Details
    .contact-details
      .details
        h3 Email Us
        p support@travelquest.com
      .details
        h3 Call Us
        p +1 234 567 890
      .details
        h3 Visit Us
        p 123 Main Street, Islamabad, Pakistan

    // Google Maps
    iframe(
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14125.094648345983!2d73.04329488815395!3d33.684420260588206!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38dfbf1b344e745f%3A0x68c8ae9c2a8b1e8b!2sIslamabad!5e0!3m2!1sen!2s!4v1618235162709!5m2!1sen!2s"
      allowfullscreen=""
      loading="lazy"
    )
